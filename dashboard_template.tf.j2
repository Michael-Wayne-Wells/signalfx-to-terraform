
resource "signalfx_dashboard" "{{ terraformName }}" {
    name                = "{{ name }}"
    dashboard_group     = "{{ groupId }}"
    {% if description != "" %}
    description         = "{{ description }}"
    {% endif %}
    chart_resolution    = "{{ chartDensity | lower }}"

    {% for chart in charts %}
  chart {
    chart_id = {{chart['chartId']}}
    width    = {{chart['width']}}
    height   = {{chart['height']}}
    row      = {{chart['row']}}
    column   = {{chart['column']}}
  }
    {% endfor %}

}

{% for chart in newCharts %}
    {{ chart }}
{% endfor %}
